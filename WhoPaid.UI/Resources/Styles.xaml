<?xml version="1.0" encoding="UTF-8"?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ResourceDictionary Source="Colors.xaml" />
    <OnPlatform x:Key="IcoMoon" x:TypeArguments="x:String">
        <On Platform="iOS" Value="icomoon" />
        <On Platform="Android" Value="icomoon.ttf#icomoon" />
    </OnPlatform>
    <Style x:Key="IconLabel" TargetType="Label">
        <Setter Property="HorizontalTextAlignment" Value="Center" />
        <Setter Property="VerticalTextAlignment" Value="Center" />
        <Setter Property="FontFamily" Value="{StaticResource IcoMoon}" />
    </Style>
    <Style x:Key="IconButton" TargetType="Button">
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="FontFamily" Value="{StaticResource IcoMoon}" />
    </Style>
    <Style x:Key="PrimaryButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource LightPink}"/>
    </Style>
    <Style x:Key="SecondaryButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource LightBlue}"/>
    </Style>
</ResourceDictionary>